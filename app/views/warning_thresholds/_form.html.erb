<p>Set warning threshold for PM25 count</p>

<%= form_with model: @warning_threshold do |form| %>
  <div class="mb-3">
    <%= form.label :city, class: 'form-label' %>
    <%= form.text_field :city, class: 'form-control' %>
  </div>
  <% @warning_threshold.errors.full_messages_for(:city).each do |message| %>
    <div style="color:red"><%= message %></div>
  <% end %>

  <div class="mb-3">
    <%= form.label :threshold, class: 'form-label' %>
    <%= form.number_field :threshold, in: 0..10000, class: 'form-control' %>
  </div>

  <% @warning_threshold.errors.full_messages_for(:threshold).each do |message| %>
    <div style="color:red"><%= message %></div>
  <% end %>

  <div class="mt-5">
    <%= form.submit class: 'form-control' %>
  </div>
<% end %>

<div class="mt-5">
  <%= link_to "Back to main page", root_path %>
</div>
